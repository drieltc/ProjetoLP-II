<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufrn.imd.projetofinal.control.TelaProfessorController">
    <children>
        <Pane layoutX="30.0" layoutY="30.0">
            <children>
                <Label alignment="CENTER" layoutX="246.0" layoutY="565.0" prefHeight="17.0" prefWidth="260.0" text="Tela do Professor" textAlignment="CENTER" />

                <TableView fx:id="tabela" editable="true" layoutY="161.0" prefHeight="400.0" prefWidth="751.0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="NomeCol" prefWidth="200.0" text="Nome" />
                        <TableColumn fx:id="n1Col" prefWidth="110.0" text="N1" />
                        <TableColumn fx:id="n2Col" prefWidth="110.0" text="N2" />
                        <TableColumn fx:id="n3Col" prefWidth="110.0" text="N3" />
                        <TableColumn fx:id="obsCol" prefWidth="214.0" text="Observações" />
                    </columns>
                </TableView>
      
                <Button layoutX="713.0" layoutY="2.0" mnemonicParsing="false" onAction="#LogOut" text="Sair" />
            <TextArea fx:id="observacaoTurma" layoutX="307.0" layoutY="-1.0" prefHeight="153.0" prefWidth="398.0" text="OBSERVAÇÕES DE CADA TURMA" />
            <Button fx:id="adicionarAlunoButton" layoutX="2.0" layoutY="564.0" mnemonicParsing="false" onAction="#addAluno" text="+" />
            <Button fx:id="removerAlunoButton" layoutX="31.0" layoutY="564.0" mnemonicParsing="false" onAction="#removeAluno" prefHeight="25.0" prefWidth="24.0" text="-" />
                <ListView fx:id="listaTurmas" layoutX="2.0" layoutY="1.0" onMouseClicked="#mostrarDetalhesTurma" prefHeight="123.0" prefWidth="293.0" />
            <Button layoutX="208.0" layoutY="127.0" mnemonicParsing="false" onAction="#gerarDuplas" text="Gerar Grupos" />
            <Button layoutX="107.0" layoutY="127.0" mnemonicParsing="false" onAction="#exportarTurma" text="Exportar Dados" />
            <Button fx:id="removerTurma" layoutX="31.0" layoutY="127.0" mnemonicParsing="false" onAction="#removeTurma" prefHeight="25.0" prefWidth="24.0" text="-" />
            <Button fx:id="adicionarTurma" layoutX="2.0" layoutY="127.0" mnemonicParsing="false" onAction="#addTurma" text="+" />
            </children>
        </Pane>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
