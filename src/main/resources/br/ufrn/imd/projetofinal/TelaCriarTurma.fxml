<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="br.ufrn.imd.projetofinal.control.TelaCriarTurmaController">
    <Label text="Nome da Turma:" />
    <TextField fx:id="txtNomeTurma" GridPane.columnIndex="1" />

    <Label text="Alunos (separados por ';')" GridPane.rowIndex="1" />

    <Button fx:id="btnSalvar" onAction="#salvarTurma" text="Salvar" GridPane.rowIndex="2" />
    <Button fx:id="btnCancelar" onAction="#cancelar" text="Cancelar" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <TextArea fx:id="txtAlunos" prefHeight="511.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
